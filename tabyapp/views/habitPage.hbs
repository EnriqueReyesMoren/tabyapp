    type: 'bar',
    maintainAspectRatio: 'true',
    data: {
            datasets: [{
                label: '{{ name }}',
                data: [10, 20, 30, 40]
            }, {
                label: 'Line Dataset',
                data: [3, 3, 65, 40],

                // Changes this dataset to become a line
                type: 'bar'
            }],
      
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday','Firday','Saturday','Sunday']
        },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
}
</script>


