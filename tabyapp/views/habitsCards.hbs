<div class="row">
  {{#each user.habits}}
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="card" style="background-color: {{color}};">
      <img src="{{image}}" class="card-img-top" alt="{{name}}">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{notes}}</p>
        
        <br>
        <br>
        <a href="/habit/{{_id}}" class="btn btn-primary btn-block">Go details</a>
        <a href="/habit/update/{{_id}}"class="btn btn-primary btn-block">Edit habit</a>
